<% provide(:title, 'Contact') %>

<h1 class="title is-1">Contact Red Hendery</h1>
<br>

<div class="columns is-centered">
  <div class="column is-5">
    <%= form_for @contact, url: contact_index_path do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="field">
        <%= f.label :name, class: 'label' %>
        <%= f.text_field :name, required: true, class: 'input',
                          type: 'text', placeholder: 'Your Name' %>
      </div>

      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, required: true, class: 'input',
                    type: 'email', placeholder: 'Your Email Address' %>
      </div>

      <div class="field">
        <%= f.label :message, class: 'label' %>
        <%= f.text_area :message, rows: 8, cols: 40, required: true,
                    class: 'textarea', placeholder: 'Your message to Red' %>
      </div>

      <div class="field" style="display:none">
        <%= f.text_field :ham_sandwich, autocomplete: 'off' %>
      </div>

      <div class="field">
        <%= f.submit 'Send Message', id: 'button', class: 'button is-medium is-link is-fullwidth', disabled: true %>
      </div>
    <% end %>
  </div>
</div>
<div class="columns is-centered">
  <div class="column is-5">
    <p>
      Your message and email address are neither collected or stored.
      They get sent directly to Red, he might archive your message but probably not.
    </p>
    <br>
    <p>
      Follow the link to get the
      <%= link_to 'get the gist', 'https://gist.github.com/redhendery/51b5d2720d7f901154a33cfb88206efc', target: 'blank' %>
      of how to do make a simple contact form like this one.
    </p>
  </div>
</div>
<hr>

<%= render 'shared/socials' %>
<!-- Disables Send Message button for 30 seconds to fight spam -->
<%= javascript_pack_tag 'timer' %>
